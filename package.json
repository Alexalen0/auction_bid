{
  "name": "auction-bid-system",
  "version": "1.0.0",
  "description": "Mini Real-Time Auction System",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon server.js",
    "client": "cd client && set PORT=3001 && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && node server.js",
    "seed": "cd server && node seed.js",
    "install-deps": "npm install && cd client && npm install",
    "docker-build": "docker build -t auction-system .",
    "docker-run": "docker run -p 3000:3000 auction-system"
  },
  "keywords": ["auction", "real-time", "bidding", "websocket"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sequelize": "^6.32.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.7",
    "@sendgrid/mail": "^7.7.0",
    "puppeteer": "^21.1.1",
    "handlebars": "^4.7.8",
    "moment": "^2.29.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
